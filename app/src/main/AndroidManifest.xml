        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Club_Deportivo_DAM">
        <activity
            android:name=".RegistrarCuotaActivity"
            android:label="@string/registrar_cuota"
            android:exported="false" />
        <activity
            android:name=".RegistrarPagoActivity"
