<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Club_Deportivo_DAM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Forzar el estilo de la ActionBar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Estilo personalizado para la ActionBar (ya definido en el values/themes.xml, pero lo referenciamos) -->
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Club_Deportivo_DAM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>