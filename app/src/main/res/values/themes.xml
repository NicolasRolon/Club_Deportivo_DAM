<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la aplicación (con ActionBar) -->
    <style name="Theme.Club_Deportivo_DAM" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema específico para actividades sin ActionBar -->
    <style name="Theme.Club_Deportivo_DAM.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>